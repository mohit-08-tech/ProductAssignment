
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td{
        width:150px;
        text-align:center;
    }
    .row label{
        min-width:130px;
    }
    .row{
        margin:20px 0;
    }
    .shadow {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        margin:0 0 30px 0;
    }
</style>
<h2>Product</h2>
<div class="container shadow">
    <div class="alert-danger">
        @ViewBag.Error
    </div>

    @using (Html.BeginForm("Index", "Product", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-4">
                <label>Product Name :</label>
                <input type="text" class="form-control" name="ProductName" id="ProductName" placeholder="Enter Product Name to search" />
            </div>
            <div class="col-lg-4">
                <label>Product Size :</label>
                <input type="text" class="form-control" name="ProductSize" id="ProductSize" placeholder="Enter Product Size to search (S,M,L,XL)" />
            </div>
            <div class="col-lg-4">
                <label>Product Price :</label>
                <input type="text" class="form-control" name="ProductPrice" id="ProductPrice" placeholder="Enter Product Price to search " />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <label>MFG Date :</label>
                <input type="date" class="form-control" name="MFGDate" id="MFGDate" placeholder="Enter MFGDate to search" />
            </div>
            <div class="col-lg-4">
                <label>Product Category :</label>
                <input type="text" class="form-control" name="ProductCategory" id="ProductCategory" placeholder="Enter Product Category to search" />
            </div>
            <div class="col-lg-4">
                <label>Search Conjunction :</label>
                <input type="radio" name="SearchConj" value="OR" /> OR
                <input type="radio" name="SearchConj" value="AND" /> AND
            </div>
        </div>
            <div class="col-lg-6 text-right">
                <input type="submit" value="Search" class="btn-primary" />
            </div>
    }
    <div class="col-lg-6 text-left">
        @using (Html.BeginForm("Index", "Product", FormMethod.Get))
        {
            <input type="submit" value="Reset" class="btn-primary" />
        }
    </div>
</div>
<div class="col-lg-12 ">
    <table class="table-striped" cellpadding="1" cellspacing="1" border="1">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Product Size</td>
                <td>Product Price</td>
                <td>MFG Date</td>
                <td>Product Category</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)                                                                                                                                                                                                                                                             
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Size</td>
                    <td>@product.Price</td>
                    <td>@product.MFGDateFormatted</td>
                    <td>@product.Category</td>
                </tr>
            }
            
        </tbody>
    </table>

</div>